

<ItemDrawer>:

#Creo un textfield personalizzato
<InputTextField@MDTextField>:
    multiline: False
    max_text_length: 9
    helper_text_mode: 'on_error'
    helper_text: 'max n° of digits = 9'
    fill_color: 0, 0, 0, .4
    input_filter:'float'
    halign: "center"


#Contenuto del menù
<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "15dp"
    spacing: "15dp"

    #oggetti del menù (icona + nome...)
    GridLayout:
        cols:2
        size_hint_y: .15
        
        AnchorLayout:
            anchor_x: "left"
            anchor_y: "center"
            size_hint_y: None
            size_hint_x: .7
            height: avatar.height

            Image:
                id: avatar
                size_hint: None, None
                size: "80dp", "80dp"
                source: "./media/carb_icon.png"

        AnchorLayout:
            anchor_x: "left"
            anchor_y: "bottom"
            size_hint_y: None
            # size_hint_x: None
            height: avatar.height

            MDLabel:
                text: "AutoCARB"
                font_style: "H5"
                # size_hint_y: None
                theme_text_color: "Custom"
                text_color: 0.7, 0.5, 1, 1
                # height: self.texture_size[1]
                # padding: (0,10)


    #pulsanti del menù
    ScrollView:
        size: self.size
        MDList:            
            OneLineIconListItem:
                text: "Link to Manual"
                theme_text_color: "Custom"
                text_color: 0.7, 0.5, 1, 1
                md_bg_color: 255/255, 240/255, 24/255, 0
                size_hint_x: 1
                on_release: app.help_button()                
                IconLeftWidget:
                    icon: "help-circle-outline"
                    theme_text_color: "Custom"
                    text_color: 0.7, 0.5, 1, 1
                    on_release: app.help_button()
                    
            #tasto per cambiare il tema chiaro scuro
            OneLineIconListItem:               
                text: "App Theme Toggle"
                theme_text_color: "Custom"
                text_color: 0.7, 0.5, 1, 1
                md_bg_color: 255/255, 240/255, 24/255, 0
                size_hint_x: 1
                on_release: app.theme_change()               
                IconLeftWidget:
                    icon: "theme-light-dark"
                    theme_text_color: "Custom"
                    text_color: 0.7, 0.5, 1, 1
                    on_release: app.theme_change()
                    
            #Pulsante di popup per i crediti
            OneLineIconListItem:                
                text: "Credits"
                theme_text_color: "Custom"
                text_color: 0.7, 0.5, 1, 1
                md_bg_color: 255/255, 240/255, 24/255, 0
                size_hint_x: 1
                on_release: app.credits_button()               
                IconLeftWidget:
                    icon: "email"
                    theme_text_color: "Custom"
                    text_color: 0.7, 0.5, 1, 1
                    on_release: app.credits_button()
            
            #Dacci i Soldi
            OneLineIconListItem:                
                text: "Support Developer"
                theme_text_color: "Custom"
                text_color: 0.7, 0.5, 1, 1
                md_bg_color: 255/255, 240/255, 24/255, 0
                size_hint_x: 1
                on_release: app.donation_button()
                IconLeftWidget:
                    icon: "bank"
                    theme_text_color: "Custom"
                    text_color: 0.7, 0.5, 1, 1
                    on_release: app.donation_button()

            #Licenza
            OneLineIconListItem:           
                text: "Link to Licence"
                theme_text_color: "Custom"
                text_color: 0.7, 0.5, 1, 1
                size_hint_x: 1
                on_release: app.licence_button()
                IconLeftWidget:
                    icon: "license"
                    theme_text_color: "Custom"
                    text_color: 0.7, 0.5, 1, 1
                    on_release: app.licence_button()

            #Link a github
            OneLineIconListItem:           
                text: "Link to source code"
                theme_text_color: "Custom"
                text_color: 0.7, 0.5, 1, 1
                size_hint_x: 1
                on_release: app.code_button()
                IconLeftWidget:
                    icon: "github-circle"
                    theme_text_color: "Custom"
                    text_color: 0.7, 0.5, 1, 1   
                    on_release: app.code_button() 

#---------------------------------------------------------------------------------------------

#SCHERMATA PRINCIPALE
Screen:
    
    NavigationLayout:

        ScreenManager:

            Screen:
                   
                BoxLayout:
                    orientation: 'vertical'
                    
                    #barra superiore con titolo, salva menù e reset
                    MDToolbar:
                        title: "AutoCARB"
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.set_state()]]
                        right_action_items: [['content-save',lambda x: app.save_entries()],['restore',lambda x: app.reset_entries()]]
                    
                    #barra inferiore con home e dimension
                    MDBottomNavigation:
                        id: btt_layout
                        panel_color: .2, .2, .2, 1
                        
                        #BOTTONE HOME
                        MDBottomNavigationItem:
                            name: 'screen 1'
                            text: 'Home'
                            icon: 'home'

                            #Contenuto della home
                            GridLayout:
                                rows:5                                

                                #risultati dei calcoli (A/F e errore)   
                                GridLayout:
                                    cols:2
                                    rows: 2
                                    size_hint_y: None
                                    height: self.minimum_height
                                    padding: 0,20
                                    MDLabel:
                                        halign: "center"
                                        text: "Air Fuel ratio"
                                        size_hint_y: None
                                        height: self.texture_size[1]
                                        halign: "center"
                                        theme_text_color: "Custom"
                                        text_color: 0.7, 0.5, 1, 1
                                        canvas:
                                            Color:
                                                rgba: 0.7, 0.5, 1, 0.2
                                            Rectangle:
                                                size: self.size
                                                pos: self.pos
                                    MDLabel:
                                        halign: "center"
                                        text: "Error"
                                        size_hint_y: None
                                        height: self.texture_size[1]
                                        halign: "center"
                                        theme_text_color: "Custom"
                                        text_color: 0.7, 0.5, 1, 1
                                        canvas:
                                            Color:
                                                rgba: 0.7, 0.5, 1, 0.2

                                            Rectangle:
                                                size: self.size
                                                pos: self.pos
                                    MDLabel:
                                        id: af
                                        halign: "center"
                                        text: "-"
                                        size_hint_y: None
                                        height: self.texture_size[1]
                                        halign: "center"
                                        theme_text_color: "Custom"
                                        text_color: 0.7, 0.5, 1, 1
                                    MDLabel:
                                        id: err
                                        halign: "center"
                                        text: "-"
                                        size_hint_y: None
                                        height: self.texture_size[1]
                                        halign: "center"
                                        theme_text_color: "Custom"
                                        text_color: 0.7, 0.5, 1, 1

                                #Label con su scritto il Tipo di miscela
                                MDLabel:
                                    id: mixture_label
                                    text: "Mixture Type"
                                    halign: "center"
                                    font_style: "H6"
                                    padding_x: 10
                                    padding_y: 5
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    text_size: self.width, None
                                    theme_text_color: "Custom"
                                    text_color: 0.7, 0.5, 1, 1
                                    canvas:
                                        Color:
                                            rgba: 0.7, 0.5, 1, 0.2
                                        Rectangle:
                                            size: self.size
                                            pos: self.pos

                                #Spazio vuoto con testo trasparente
                                MDLabel: 
                                    text: "---"
                                    padding_y: 5
                                    size_hint_y: None
                                    height: self.texture_size[1]
                                    theme_text_color: "Custom"
                                    text_color: 0.3, 1, 0.2, 0

                                #LISTA INPUT
                                MDScrollViewRefreshLayout:
                                    id: refresh
                                    size: self.size
                                    refresh_callback: app.refresh_callback
                                    root_layout: root
                                    
                                    GridLayout:
                                        size_hint_y: None
                                        height: self.minimum_height
                                        id: box
                                        rows: 14
                                        cols: 1
                                        padding: 30

                                        InputTextField:
                                            id:temp
                                            hint_text: "Room Temperature [°C]"                                            
                                            text: "20"
                                        
                                        InputTextField:
                                            id:pressione
                                            hint_text: "Room Pressure [Pa]"                                           
                                            text: "101325"
                                            
                                        InputTextField:
                                            id:phi
                                            hint_text: "Relative humidity [%]"                                            
                                            text: "40"
                                            
                                        InputTextField:
                                            id:dpressione
                                            hint_text: "\u0394P [Pa]"                                            
                                            text: "13325"
                                            
                                        InputTextField:
                                            id:d1
                                            hint_text: "d1 [mm]"                                           
                                            text: "42"
                                            
                                        InputTextField:
                                            id:d3
                                            hint_text: "d3 [mm]"                                            
                                            text: "20"

                                        InputTextField:
                                            id:d2max
                                            hint_text: "d2max [mm]"                                         
                                            text: "19"

                                        InputTextField:
                                            id:d2min
                                            hint_text: " d2min [mm]"                                            
                                            text: "19"
  
                                        InputTextField:
                                            id:hc
                                            hint_text: "hC [mm]"                                            
                                            text: "17"

                                        InputTextField:
                                            id:hd
                                            hint_text: "hD [mm]"                                            
                                            text: "45"

                                        InputTextField:
                                            id:dgetto
                                            hint_text: "djet [calbrated hole]"                                           
                                            text: "97"

                                        InputTextField:
                                            id:lcd
                                            hint_text: "lCD [mm]"                                           
                                            text: "2"
                                        
                                        #SPAZI VUOTI CON TESTO TRASPARENTE PER LO SCROLL
                                        MDLabel:
                                            text: "---"
                                            padding_y: 150
                                            size_hint_y: None
                                            height: self.texture_size[1]                                          
                                            theme_text_color: "Custom"
                                            text_color: 0.3, 1, 0.2, 0
                                        MDLabel:
                                            text: "---"
                                            padding_y: 150
                                            size_hint_y: None
                                            height: self.texture_size[1]
                                            theme_text_color: "Custom"
                                            text_color: 0.3, 1, 0.2, 0

                                #Tasto RUN
                                MDRaisedButton:
                                    id: mdbu
                                    text: "RUN"
                                    size_hint_x: 1 #da 0 a 1
                                    on_press: app.start_button() #funzione da eseguire alla pressione del tasto



                        MDBottomNavigationItem:
                            name: 'screen 2'
                            text: 'Dimensions'
                            icon: 'image-area'

                            BoxLayout:
                                
                                orientation: 'vertical'
                                size_hint: (1,1)
                                Image:
                                    id:img_drawing
                                    source: "./media/drawing.jpg"


        MDNavigationDrawer:
            id: nav_drawer

            ContentNavigationDrawer:
                id: content_drawer